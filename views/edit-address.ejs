<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-center justify-center p-8">
  <form action="/address/edit/<%= address._id %>" method="POST" class="bg-white p-6 rounded shadow-md w-full max-w-md">
    <h2 class="text-xl font-semibold mb-4">Edit Address</h2>

    <input type="text" name="line1" value="<%= address.line1 %>" placeholder="Address Line 1" class="mb-3 w-full border p-2 rounded" required>
    <input type="text" name="city" value="<%= address.city %>" placeholder="City" class="mb-3 w-full border p-2 rounded" required>
    <input type="text" name="state" value="<%= address.state %>" placeholder="State" class="mb-3 w-full border p-2 rounded" required>
    <input type="text" name="zip" value="<%= address.zip %>" placeholder="ZIP Code" class="mb-3 w-full border p-2 rounded" required>

    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Update Address</button>
  </form>
</div>

<%- include('./partials/footer') %>
