<%- include('./partials/ownerheader') %>

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10 px-4">
  <div class="w-full max-w-4xl bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Edit Product</h2>
    
    <form action="/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data" class="space-y-6">
      
      <!-- Image Upload -->
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Change Product Image (optional)</label>
        <input type="file" name="image" class="w-full border rounded p-2 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-white file:bg-blue-600 hover:file:bg-blue-700">
      </div>

      <!-- Product Info -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <input type="text" name="name" placeholder="Product Name" value="<%= product.name %>" required class="border p-2 rounded w-full" />
        <input type="number" name="price" placeholder="Product Price" value="<%= product.price %>" required class="border p-2 rounded w-full" />
        <input type="number" name="discount" placeholder="Discount" value="<%= product.discount %>" class="border p-2 rounded w-full" />
      </div>

      <!-- Colors -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <input type="text" name="bgcolor" placeholder="Background Color" value="<%= product.bgcolor %>" class="border p-2 rounded w-full" />
        <input type="text" name="panelcolor" placeholder="Panel Color" value="<%= product.panelcolor %>" class="border p-2 rounded w-full" />
        <input type="text" name="textcolor" placeholder="Text Color" value="<%= product.textcolor %>" class="border p-2 rounded w-full" />
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700">Update Product</button>
        <a href="/owner/products/my" class="ml-4 text-blue-600 hover:underline">Cancel</a>
      </div>

    </form>
  </div>
</div>

<%- include('./partials/ownerfooter') %>
