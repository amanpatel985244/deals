<%- include("partials/header") %>

<div class="max-w-xl mx-auto mt-10 bg-white shadow p-6 rounded">
  <h2 class="text-2xl font-bold mb-4">Select Payment Method</h2>

  <form action="/order/payment" method="POST">
    <input type="hidden" name="addressId" value="<%= addressId %>">

    <label class="block mb-2">
      <input type="radio" name="payment" value="cod" required> Cash on Delivery
    </label>
    <label class="block mb-4">
      <input type="radio" name="payment" value="online" required> Online Payment
    </label>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Confirm Payment</button>
  </form>
</div>

<%- include("partials/footer") %>
