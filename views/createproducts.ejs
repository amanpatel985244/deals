<%- include('./partials/ownerheader') %>

<% if(success.length > 0) { %>
<div class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transition-all duration-300 z-50">
    <%= success %>
</div>
<% } %>

<div class="min-h-screen bg-gray-100 flex">
  <!-- Sidebar -->
  <aside class="w-1/5 bg-white shadow p-6 hidden md:block">
    <h2 class="text-xl font-bold mb-6 text-gray-700">Owner Panel</h2>
    <nav class="flex flex-col space-y-4">
      <a href="/owner/products/my" class="text-blue-600 hover:underline font-medium">All Products</a>
      <a href="/owner/dashboard" class="text-blue-600 hover:underline font-medium">Create New Product</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8">
    <div class="max-w-4xl mx-auto bg-white m-10 shadow-md rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Create New Product</h2>
      <form action="/products/create" method="POST" enctype="multipart/form-data" autocomplete="off" class="space-y-6">

        <!-- Image Upload -->
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Product Image</label>
          <input type="file" name="image" required class="w-full border rounded p-2 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-white file:bg-blue-600 hover:file:bg-blue-700">
        </div>

        <!-- Product Info -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <input type="text" name="name" placeholder="Product Name" required class="border p-2 rounded w-full" />
          <input type="number" name="price" placeholder="Product Price" required class="border p-2 rounded w-full" />
          <input type="number" name="discount" placeholder="Discount Price"  class="border p-2 rounded w-full" />
        </div>

        <!-- Panel Colors -->
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Panel Colors</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <input type="text" name="bgcolor" placeholder="Background Color (e.g. #fff or red)" class="border p-2 rounded w-full" />
            <input type="text" name="panelcolor" placeholder="Panel Color" class="border p-2 rounded w-full" />
            <input type="text" name="textcolor" placeholder="Text Color" class="border p-2 rounded w-full" />
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <input type="submit" value="Create Product" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 cursor-pointer">
        </div>
      </form>
    </div>
  </main>
</div>

<%- include('./partials/ownerfooter') %>
